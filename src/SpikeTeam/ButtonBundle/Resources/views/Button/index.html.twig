{% extends 'admin.button.html.twig' %}

{% block body %}
    <div class="nameplate">
        <div class="nameplate-inner">
            &bull;&nbsp;&nbsp;ALERT SPIKE TEAM&nbsp;&nbsp;&bull;
        </div>
    </div>
    <div id="button-box">
        <div id="button-box-inner">
            <div id="button" class="{% if canPush %}enabled{% else %}disabled{% endif %}">
                {% if canPush %}
                    <a href="{{ goUrl }}">
                        <button class="button-image" /></button>
                    </a>
                {% else %}
                    <button class="button-image" /></button>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="page">
        <div class="group-select">
            Send Alert to Group: 
            <select {% if next.getCaptain() %}class="{{ next.getCaptain().preferredTime }}"{% endif %}>
                <option value="all">All</option>
                {% for listedGroup in groupList %}
                    <option value="{{ listedGroup.id }}"
                        {% if listedGroup.id == next.id %}selected="selected"{% endif %}
                        {% if not listedGroup.enabled %}disabled="disabled"{% endif %}
                        {% if listedGroup.getCaptain() %}class="{{ listedGroup.getCaptain().preferredTime }}"{% endif %}>{{ listedGroup.id }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="latest">
            {% if mostRecent != false %}
            Latest:
                <span class="latest-group">
                    {% if mostRecent.group.id is defined %}
                        Group {{ mostRecent.group.id }}
                    {% else %}
                        All Spikers
                    {% endif %}
                </span> at
                <span class="latest-time">
                    {{ mostRecent.pushTime|date('G:i, m/d/y') }}
                </span>
            {% endif %}
        </div>
    </div>
{% endblock %}
