{% extends 'admin.button.html.twig' %}

{% block body %}
    <div class="nameplate">
        <div class="nameplate-inner">
            &bull;&nbsp;&nbsp;ALERT SPIKE TEAM&nbsp;&nbsp;&bull;
        </div>
    </div>
    <div id="button-box">
        <div id="button-box-inner">
            <div id="button" class="{% if canPush %}enabled{% else %}disabled{% endif %}">
                {% if canPush %}
                    <a href="{{ goUrl }}">
                        <button id="{{ next }}" class="button-image" /></button>
                    </a>
                {% else %}
                    <button class="button-image" /></button>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="page">
        <div class="group-select">
            Send Alert to Group: 
            <select>
                <option value="all">All</option>
                {% for id in ids %}
                    <option value="{{ id }}"
                        {% if id == next %}selected="selected"{% endif %}
                        {% if mostRecent.group.id is defined and id == mostRecent.group.id %}disabled="disabled"{% endif %}>{{ id }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="latest">
            Latest: {% if mostRecent.group.id is defined %}Group {{ mostRecent.group.id }}{% else %}All Spikers{% endif %} at {{ mostRecent.pushTime|date('G:i, m/d/y') }}
        </div>
    </div>
{% endblock %}


