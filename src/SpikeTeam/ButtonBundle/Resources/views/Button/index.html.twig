{% extends 'admin.button.html.twig' %}

{% block body %}
    <div class="nameplate">
        <div class="nameplate-inner">
            &bull;&nbsp;&nbsp;ALERT SPIKE TEAM&nbsp;&nbsp;&bull;
        </div>
    </div>
    <div id="button-box">
        <div id="button-box-inner">
            <div id="button" class="{% if canPush %}enabled{% else %}disabled{% endif %}">
                {% if canPush %}
                    <a href="/goteamgo">
                        <button class="button-image" /></button>
                    </a>
                {% else %}
                    <button class="button-image" /></button>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="page">
        <div class="group-select">
            Send Alert to Group: 
            <select>
                {% for id in ids %}
                    <option value="{{ id }}"
                        {% if id == nextGroup %}selected="selected"{% endif %}
                        {% if mostRecentGroup.id is defined and id == mostRecentGroup.id %}disabled="disabled"{% endif %}>{{ id }}</option>
                {% endfor %}
            </select>
        </div>
        {% if mostRecentGroup.id is defined %}
        <div class="latest">
            (Latest: Group {{ mostRecentGroup.id }} on -----)
        </div>
        {% endif %}
    </div>
{% endblock %}


