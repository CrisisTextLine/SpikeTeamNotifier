{% extends 'admin.settings.html.twig' %}

{% block body %}
    <div class="nameplate">
        <div class="nameplate-inner">
            &bull;&nbsp;&nbsp;SETTING: {{ setting.name }}&nbsp;&nbsp;&bull;
        </div>
    </div>
    <div class="page">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.setting) }}
                {{ form_widget(form.setting, {'attr': {'class': 'form-control', 'placeholder': 'Setting'} }) }}
            </div>

            {{ form_widget(form.save, { 'label': 'Save Setting!', 'attr': {'class': 'btn btn-default btn-primary'} }) }}
            <a href="{{ cancel }}"><button class="btn">Cancel</button></a>
        {{ form_end(form) }}
    </div>
{% endblock %}