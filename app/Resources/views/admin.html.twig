{% extends 'base.html.twig' %}

{% block bodySection %}logged-in{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="button"><a href="{{ path('button') }}">The Button<span class="sr-only">(current)</span></a></li>
            <li class="spikers"><a href="/spikers">Spike Team</a></li>
            {% if is_granted('ROLE_ADMIN') %}
              <li class="admin"><a href="/admin">Admin Users</a></li>
              <li class="settings"><a href="/settings">Settings</a></li>
            {% endif %}
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="user"><a href="{{ path('admin_edit', {'email': app.user.email}) }}">{{ app.user.email }}</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript">
      window.onload = function() {
          App.init();
      };
  </script>
{% endblock %}
